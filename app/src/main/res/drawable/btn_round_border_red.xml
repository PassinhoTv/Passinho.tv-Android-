<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" android:color="@color/color_red">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/color_red" />
            <gradient android:angle="-90" android:startColor="#882121" android:endColor="#572020"  />
        </shape>
    </item>
    <item android:state_focused="true" android:color="@color/color_red">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/color_red" />
        </shape>
    </item>
    <item android:color="@color/color_red">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/color_red" />
        </shape>
    </item>
</selector>