<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    android:orientation="vertical"
    tools:context="com.passinhotv.android.ui.auth.Getting_2_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:background="@drawable/img_logo_top" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textStyle="bold|italic"
            android:text="As Capturas de Tela Não São Seguras!"
            android:textAlignment="center"
            android:textColor="@color/color_green"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tx_crie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold|italic"
            android:text="Se você tirar uma captura de tela, seu backup pode ser visto por outras aplicações."
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_round_border_green"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Compreendo."
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:textColor="@color/color_green"
        android:textSize="22dp" />

</RelativeLayout>
