<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/tab_bkg"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_toLeftOf="@+id/img_blog"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tx_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whip Nae Nae"
                android:textSize="16dp"
                android:textColor="@color/color_green"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img_placeholder_profile" />
                <TextView
                    android:id="@+id/tx_desc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Whip Nae NaeWhip Nae Naehip Nae NaeWhip Nae Nae"
                    android:textColor="@color/color_white_gray"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_blog"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder_profile"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tx_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:textColor="@color/color_green"
        android:textSize="16dp"
        android:text="Nescal Dancy - 1 ano atras"/>

</LinearLayout>